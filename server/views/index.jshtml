<html>
	<head>
		<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/Chart.js/0.2.0/Chart.min.js"></script> 		
		<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script> 
	</head>

	<body>
		@if(JSON.parse(locals.data).datasets.length) {
			<div>
				<canvas id="myChart" width="400" height="400"></canvas>
			</div>
			<div style="position: absolute; top: 0; left: 400">
				<ul>
					@for(var i = 0, datasets = JSON.parse(locals.data).datasets, len = datasets.length; i < len; i++) {
						<li>@datasets[i].name</li>
					}
				</ul>
			</div>
		
			<script type="text/javascript">
				(function() {				
					//Get context with jQuery - using jQuery's .get() method.
					var ctx = $("#myChart").get(0).getContext("2d");
					//This will get the first returned node in the jQuery collection.
					var myNewChart = new Chart(ctx).Line(@locals.data, {});				
				}());
			</script>
		} else {
			<div>
				<h1>No statistics to display</h1>
			</div>
		}
	</body>
</html>